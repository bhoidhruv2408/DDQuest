<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background: Primary Color -->
    <solid android:color="@color/primary_color" />

    <!-- Rounded Corners -->
    <corners android:radius="12dp" />

    <!-- Optional: Subtle border (remove if not needed) -->
    <stroke
        android:width="1dp"
        android:color="#336366F1" /> <!-- 20% opacity of primary -->

    <!-- Padding (optional - use in layout instead if needed) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>
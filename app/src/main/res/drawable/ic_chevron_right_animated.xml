<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/normal"
        android:drawable="@drawable/ic_chevron_right" />

    <item
        android:id="@+id/pressed"
        android:drawable="@drawable/ic_chevron_right_pressed" />

    <transition
        android:fromId="@+id/normal"
        android:toId="@+id/pressed">
        <animated-vector
            android:drawable="@drawable/avd_chevron_right_forward"
            android:animation="@animator/chevron_bounce" />
    </transition>

    <transition
        android:fromId="@+id/pressed"
        android:toId="@+id/normal">
        <animated-vector
            android:drawable="@drawable/avd_chevron_right_backward"
            android:animation="@animator/chevron_bounce_reverse" />
    </transition>
</animated-selector>